<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style = "text-align: center">Create New Campground</h1>
        
        <div style = "margin: 25px auto; width: 30%">
            <form action = "/campgrounds" method = "post">
                <div class= "form-group">
                    <input class = "form-control" type = "text" placeholder = "Name" name = "name">
                </div>
                <div class= "form-group">
                    <input class = "form-control" type = "number" placeholder = "Price" name = "price" min="100" step="1">
                </div>
                <div class= "form-group">
                    <input class= "form-control" type = "text" placeholder = "Image link" name = "image">
                </div>
                <div class= "form-group">
                    <input class= "form-control" type = "text" placeholder = "Description" name = "desc">
                </div>
                
                <div class= "form-group">
                    <input class = "btn btn-primary btn-large btn-block" type = "submit" value = "Submit"> 
                </div>
                
            </form>
            
            <a href= "/campgrounds">Go back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>
