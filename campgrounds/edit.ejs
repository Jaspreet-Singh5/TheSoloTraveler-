<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style = "text-align: center">Edit <%= campground.name %></h1>
        
        <div style = "margin: 25px auto; width: 30%">
            <form action = "/campgrounds/<%= campground._id %>?_method=PUT" method = "POST">
                <div class= "form-group">
                    <input class = "form-control" type = "text" value="<%= campground.name %>" name = "campgrounds[name]">
                </div>
                <div class= "form-group">
                    <input class = "form-control" type = "number" value="<%= campground.price %>" name = "campgrounds[price]" min="100" step="1">
                </div>
                <div class= "form-group">
                    <input class= "form-control" type = "text" value="<%= campground.image %>" name = "campgrounds[image]">
                </div>
                <div class= "form-group">
                    <input class= "form-control" type = "text" value="<%= campground.description %>" name = "campgrounds[description]">
                </div>
                
                <div class= "form-group">
                    <input class = "btn btn-primary btn-large btn-block" type = "submit" value = "Submit"> 
                </div>
                
            </form>
            
            <a href= "/campgrounds">Go back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>
