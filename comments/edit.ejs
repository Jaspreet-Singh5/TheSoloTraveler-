<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style = "text-align: center">Edit comment</h1>
        
        <div style = "margin: 25px auto; width: 30%">
            <form action = "/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method = "post">
                <div class= "form-group">
                    <input class= "form-control" type = "text" value = "<%= comment.text %>" name = "comment[text]">
                </div>
                
                <div class= "form-group">
                    <input class = "btn btn-primary btn-large btn-block" type = "submit" value = "Submit"> 
                </div>
                
            </form>
            
            <a href= "/campgrounds/<%= campground_id %>">Go back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>
